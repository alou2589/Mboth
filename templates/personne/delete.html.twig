{% extends 'base.html.twig' %}

{% block title %}Population | {{ parent() }}{% endblock %}

{% block body %}

<div class="row">
    <div class="col-md-8 col-xs-12 mx-auto">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-header">
                <div class="text-center">
                    <img class="col-md-4 mx-auto" src="{{ asset('assets/images/logo.png') }}" alt="logo image">
                </div>
            </div>
            <div class="card-body p-0">
                <div class="row">
                    <div class="col-lg-6 mx-auto">
                        <div class="p-5">
                            <p class="mb-4">Supprimer  <strong> {{personne.prenom}} {{personne.nom}} </strong> ?</p>
                            <form method="post" action="{{ path('app_personne_delete', {'id': personne.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ personne.id) }}">
                                <button class="btn btn-danger">Supprimer <i class="fas fa-trash-alt"></i></button>
                                <a href="{{ path('app_personne_show', {'id':personne.id}) }}" class="btn btn-primary">Accueil <i class="fas fa-home"></i></a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
